<body>
    <div class="success">
        ✅ 應用程式已成功載入！新版本正在運行中...
    </div>

    <div class="card">
        <h1 style="text-align: center; color: #5D5CDE; margin: 0;">🌙 作息記錄器 🌅</h1>
        <p style="text-align: center; color: #666; margin: 10px 0;">版本: 2.0 - 自包含版本</p>
    </div>

    <div class="card">
        <h2>📅 日曆</h2>
        <div style="text-align: center; margin: 20px 0;">
            <button onclick="changeMonth(-1)">← 上個月</button>
            <span id="monthDisplay" style="margin: 0 20px; font-weight: bold;"></span>
            <button onclick="changeMonth(1)">下個月 →</button>
        </div>
        
        <div class="calendar" id="calendar"></div>
        
        <p style="color: #666; font-size: 14px;">
            💡 點擊日期來記錄起床和就寢時間
        </p>
    </div>

    <div class="card">
        <h2>🔧 功能測試</h2>
        <button onclick="testAlert()">測試通知</button>
        <button onclick="testDownload()">測試下載</button>
        <button onclick="testStorage()">測試存儲</button>
        <div id="testResults" style="margin-top: 15px;"></div>
    </div>

    <div class="card">
        <h2>📊 統計</h2>
        <p>已記錄天數: <span id="recordCount">0</span> 天</p>
        <p>最近記錄: <span id="lastRecord">無</span></p>
    </div>

    <script>
        console.log('🚀 作息記錄器 v2.0 啟動成功！');
        
        let sleepData = JSON.parse(localStorage.getItem('sleepData') || '{}');
        let currentDate = new Date();

        function updateDisplay() {
            document.getElementById('monthDisplay').textContent = 
                `${currentDate.getFullYear()}年 ${currentDate.getMonth() + 1}月`;
            
            document.getElementById('recordCount').textContent = Object.keys(sleepData).length;
            
            const dates = Object.keys(sleepData).sort();
            document.getElementById('lastRecord').textContent = 
                dates.length > 0 ? dates[dates.length - 1] : '無';
        }

        function renderCalendar() {
            const calendar = document.getElementById('calendar');
            calendar.innerHTML = '';
            
            const year = currentDate.getFullYear();
            const month = currentDate.getMonth();
            const firstDay = new Date(year, month, 1);
            const lastDay = new Date(year, month + 1, 0);
            
            // 週標題
            ['日', '一', '二', '三', '四', '五', '六'].forEach(day => {
                const div = document.createElement('div');
                div.textContent = day;
                div.style.fontWeight = 'bold';
                div.style.textAlign = 'center';
                div.style.background = '#f8f9fa';
                calendar.appendChild(div);
            });
            
            // 空白天數
            for (let i = 0; i < firstDay.getDay(); i++) {
                calendar.appendChild(document.createElement('div'));
            }
            
            // 日期
            for (let day = 1; day <= lastDay.getDate(); day++) {
                const div = document.createElement('div');
                div.className = 'day';
                div.textContent = day;
                
                const dateStr = `${year}-${String(month + 1).padStart(2, '0')}-${String(day).padStart(2, '0')}`;
                if (sleepData[dateStr]) {
                    div.className += ' has-data';
                }
                
                div.onclick = () => recordTime(dateStr, day);
                calendar.appendChild(div);
            }
            
            updateDisplay();
        }

        function changeMonth(direction) {
            currentDate.setMonth(currentDate.getMonth() + direction);
            renderCalendar();
        }

        function recordTime(dateStr, day) {
            const wakeUp = prompt(`${day}日 - 請輸入起床時間 (例如: 07:30):`);
            const sleep = prompt(`${day}日 - 請輸入就寢時間 (例如: 23:30):`);
            
            if (wakeUp || sleep) {
                sleepData[dateStr] = {};
                if (wakeUp) sleepData[dateStr].wakeUp = wakeUp;
                if (sleep) sleepData[dateStr].sleep = sleep;
                
                localStorage.setItem('sleepData', JSON.stringify(sleepData));
                renderCalendar();
                
                alert('✅ 數據已保存！');
            }
        }

        function testAlert() {
            const result = document.getElementById('testResults');
            result.innerHTML = '<div style="color: green;">✅ 通知功能正常</div>';
        }

        function testDownload() {
            const blob = new Blob(['測試下載檔案'], { type: 'text/plain' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'test.txt';
            a.click();
            URL.revokeObjectURL(url);
            
            const result = document.getElementById('testResults');
            result.innerHTML = '<div style="color: green;">✅ 下載功能正常</div>';
        }

        function testStorage() {
            try {
                localStorage.setItem('test', 'ok');
                localStorage.removeItem('test');
                const result = document.getElementById('testResults');
                result.innerHTML = '<div style="color: green;">✅ 存儲功能正常</div>';
            } catch (e) {
                const result = document.getElementById('testResults');
                result.innerHTML = '<div style="color: red;">❌ 存儲功能異常</div>';
            }
        }

        // 初始化
        renderCalendar();
        
        console.log('📱 應用程式準備就緒！');
        console.log('📝 已載入數據:', Object.keys(sleepData).length, '筆記錄');
    </script>
</body>
</html>
